#!/bin/bash

errorExit() {
  echo "*** $*" 1>&2
  exit 1
}

curl --silent --max-time 2 --insecure https://localhost:6443/ -o /dev/null || errorExit "Error GET https://localhost:6443/"
if ip addr | grep -q {{ ka_master_ip }}; then
  curl --silent --max-time 2 --insecure https://{{ ka_master_ip }}:{{ ka_master_port }}/ -o /dev/null || errorExit "Error GET https://{{ ka_master_ip }}:{{ ka_master_port }}/"
fi
