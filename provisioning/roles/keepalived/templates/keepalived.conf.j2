global_defs {
    router_id LVS_DEVEL
}

vrrp_script check_apiserver {
    script "/etc/keepalived/check_apiserver.sh"
    interval 2
    weight -5
    fall 3
    rise 2
}

vrrp_instance VI_1 {
    state {{ ka_vrrp_state }}
    interface {{ ka_vrrp_if }}
    mcast_src_ip {{ ka_vrrp_ip }}
    virtual_router_id 51
    priority {{ ka_vrrp_priority }}
    advert_int 2
    authentication {
        auth_type PASS
        auth_pass {{ ka_password }}
    }
    virtual_ipaddress {
        {{ ka_master_ip }}
    }
    track_script {
        check_apiserver
    }
}
